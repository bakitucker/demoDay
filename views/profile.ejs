<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
              
               
            </div>
        </div>
        <div class="col-sm-6">
          <h3>Messages</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <p>Shoe Name:<%= messages[i].workOutName %></p>
              <p>Shoe Brand:<%= messages[i].bodyPart %></p>
              <p>Comfort level (0-10):<span><%= messages[i].weight %></span></p>
              <p>Style Rate (0-10)<span><%= messages[i].reps %></span></p>
              <p>Review:<span><%= messages[i].sets %></span></p>
              <p><span><i class="fa fa-trash" aria-hidden="true"></i></span></p>
            </li>
          <% } %>
          </ul>

          <h2>Add a Review</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <div class="thePost">
              <label for="workOutName">Workout Name</label>
              <input type="text" class="post" id="workOutName" name="workOutName" required>
            </div> 
            <div class="thePost">
              <label for="bodyPart">Body Part</label>
              <input type="text" class="post" id="bodyPart" name="bodyPart" required>
            </div> 
            <div class="thePost">
              <label for="weight">Weight</label>
              <input type="text" class="post" id="weight" name="weight" required>
            </div> 
            <div class="thePost">
              <label for="reps">Reps</label>
              <input type="text" class="post" id="reps" name="reps" required>
            </div> 
            <div class="thePost">
              <label for="sets">Sets</label>
              <input type="text" class="post" id="sets" name="sets" required>
            </div> 

            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
